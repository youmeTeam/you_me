.main-container.container-fluid
  .dashboard.dashboard-left.clearfix
    .DashboardProfileCard.module
      = link_to 'users/:id/show', class: 'DashboardProfileCard-bg u-bgUserColor u-block' do
      .DashboardProfileCard-content
        .ProfileCardAvatar
          = link_to 'users/:id/show', class: 'DashboardProfileCard-avatarLink u-inlineBlock' do
            = image_tag 'avatar.jpeg', size: '', alt: 'プロフィール画像', class: 'DashboardProfileCard-avatarImage'
        .DashboardProfileCard-userFields
          .DashboardProfileCard-name.u-textTruncate
            = link_to current_user.nickname, 'users/:id/show', class: 'u-textInheritColor'
          span.DashboardProfileCard-screenname.u-inlineBlock
            = link_to 'users/:id/show', class: 'DashboardProfileCard-screennameLink u-linkComplex u-linkClean' do
              | @
              span.u-linkComplex-target
                = current_user.user_name
        .ProfileCardStats
          ul.ProfileCardStats-statList.Arrange.Arrange--bottom.Arrange--equal
            li.ProfileCardStats-stat.Arrange-sizeFit
              = link_to 'users/:id/show', class: 'ProfileCardStats-statLink u-textUserColor u-linkClean u-block' do
                span.ProfileCardStats-statLabel.u-block
                  | ドリーム
                span.ProfileCardStats-statValue
                  = current_user.dreams.count
            li.ProfileCardStats-stat.Arrange-sizeFit
              = link_to 'users/:id/show', class: 'ProfileCardStats-statLink u-textUserColor u-linkClean u-block' do
                span.ProfileCardStats-statLabel.u-block
                  | フォロー
                span.ProfileCardStats-statValue
                  | 69
            li.ProfileCardStats-stat.Arrange-sizeFit
              = link_to 'users/:id/show', class: 'ProfileCardStats-statLink u-textUserColor u-linkClean u-block' do
                span.ProfileCardStats-statLabel.u-block
                  | フォロワー
                span.ProfileCardStats-statValue
                  | 45
    .CalenderCard.module
      | Calendar
  .content-main.top-timeline-dreambox#timeline.clearfix
    .timeline-dream-box
      .home-dream-box.dream-box.component.dream-user
        = image_tag 'avatar.jpeg', size: '', alt: 'プロフィール画像', class: 'top-timeline-tweet-box-user-image'
        .dream-form.is-minimalButtonLabels
          = form_for @dream, url: dreams_path, class: 'dream-form is-minimalButtonLabels' do |f|
            .dream-content
              .RichEditor
                .RichEditor-scrollContainer
                  .dream-box#dream-box-home-timeline contenteditable='true' placeholder='どんな夢を見たの？' spellcheck='true' role='textbox' aria-multiline='true'
                  input.hide#content-param name='dream[content]' value=""
            .DreamBoxToolbar
              .DreamBoxExtras-item.DreamBox-mediaPicker
              .DreamBoxToolbar-dreamButton.dream-button
                select.selectpicker
                  option value="1" 公開
                  option value="2" 自分のみ
                = f.submit 'ドリーム', class: 'btn btn-default primary-btn dream-action dream-btn', disabled: 'disabled'
    .stream-container
      .stream
        ol.stream-items#stream-items-id
          - if !@dreams.blank?
            - @dreams.each do |dream|
              li.stream-item.expanding-stream-item
                .context
                  .dream-context
                    span.dream-date
                      = Date.parse(dream.created_at.to_s).strftime('%Y年%m月%d日')
                .dream.original-dream
                  .content
                    .stream-item-header.clearfix
                      .stream-item-header-right
                        = link_to 'users/:id/show', class: 'userFields' do
                          = image_tag 'avatar.jpeg', size: '', alt: 'avatar', class: 'avatar'
                          strong.fullname
                            = current_user.nickname
                          span.username
                            b
                              |  @
                              = current_user.user_name
                        .posted-time
                          small.time
                            = link_to 'dreams/:id/show', class: 'dream-timestamp' do
                              span._timestamp
                                /| 2016年2月1日 23:59
                                = Time.parse(dream.created_at.to_s).strftime('%Y年 %m月 %d日 %H:%M')
                      .ProfileDream-action--more
                        .dropdown
                          = link_to '#', class: 'ProfileDream-actionButton u-textUserColorHover dropdown-toggle', data: { toggle: 'dropdown' } do
                            /= image_tag 'arrow.png', size: '', alt: 'more'
                          .dropdown-menu
                            ul
                              li
                                = link_to 'hoge', '#'
                              li
                                = link_to 'fuga', '#'
                              li
                                = link_to 'hoge', '#'
                    .js-dream-text-container
                      p.DreamTextSize.dream-text
                        = dream.content
                    .stream-item-footer
                      .ProfileDream-actionList
                        .ProfileDream-action.ProfileDream-action--favorite
                          = link_to '', class: 'ProfileDream-actionButton u-textUserColorHover' do
                            = image_tag 'favorite.png', size: '20x20', alt: 'favorite', class: 'favorite action-image'
                            | お気に入り
                        .ProfileDream-action.ProfileDream-action--comment
                          = link_to '', class: 'ProfileDream-actionButton u-textUserColorHover' do
                            = image_tag 'comment.png', size: '20x20', alt: 'comment', class: 'comment action-image'
                            | コメントする
                        .ProfileDream-action.ProfileDream-action--share
                          = link_to '', class: 'ProfileDream-actionButton u-textUserColorHover' do
                            = image_tag 'share.png', size: '20x20', alt: 'share', class: 'share action-image'
                            | シェアする
